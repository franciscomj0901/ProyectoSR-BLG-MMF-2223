# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback

#INTERFAZ NAT
allow-hotplug enp0s3
auto enp0s3
iface enp0s3 inet dhcp

#INTERFAZ RED 1 MZ
allow-hotplug enp0s8
auto enp0s8
iface enp0s8 inet static
        address 172.17.31.10
        netmask 255.255.255.0

up iptables -t nat -A POSTROUTING -o  enp0s3  -s 172.17.31.0/24 -j MASQUERADE
down iptables -t nat -D POSTROUTING -o enp0s3 -s 172.17.31.0/24 -j MASQUERADE



#INTERFAZ RED 2 DMZ
allow-hotplug enp0s9
auto enp0s9
iface enp0s9 inet static
        address 172.17.32.10
        netmask 255.255.255.0
        
up iptables -t nat -A POSTROUTING -o  enp0s3  -s 172.17.32.0/24 -j MASQUERADE
down iptables -t nat -D POSTROUTING -o enp0s3 -s 172.17.32.0/24 -j MASQUERADE

